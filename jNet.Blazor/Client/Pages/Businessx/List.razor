@page "/businesses"
@inherits BaseRazor

<h1>Businesses</h1>

@if (businesses == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>ACN</th>
                <th>ABN</th>
                <th>Account</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in businesses)
            {
                <tr>
                    <td><a href="/business/@b.Id">@b.Name</a></td>
                    <td>@b.ACN</td>
                    <td>@b.ABN</td>
                    <td>@b.AccountId</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Business[] businesses;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            businesses = await Http.GetFromJsonAsync<Business[]>("Business");
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}
